.MemberCard
  font-size 0
  .cardBar
    display flex
    a
      flex 1
      padding .373rem 0
      text-align center
      font-size .453rem
      color #C2C2C2
    .active
      color #333
  .search
    padding .2rem .4rem
    font-size 0
    input
      margin-right 3%
      box-sizing border-box
      appearance none
      outline none
      border 1px solid #ccc
      border-radius .1rem
      text-indent .1rem
      font-size .4rem
      width 80%
      height .8rem
