.App
  width 100%
  height 100%
  .Navigate
    .nav
      position fixed
      left 0
      bottom 0
      display flex
      justify-content center
      align-items center
      text-align center
      border-top 1px solid #B2B2B2
      background-color #FFF
      width 100%
      height 1.307rem
      .bar
        flex 1
        font-size .267rem
        color #808080
        p
          padding-top 12%
          background-repeat no-repeat
          background-position top center
          background-size .587rem .587rem
        &:first-child
          p
            background-image url("./assets/icon/btn_home_n@2x.png")
        &:last-child
          p
            background-image url("./assets/icon/btn_mine_n@2x.png")
      .active
        color #333
        &:first-child
          p
            background-image url("./assets/icon/btn_home_d@2x.png")
        &:last-child
          p
            background-image url("./assets/icon/btn_mine_d@2x.png")
  .Loading
    position fixed
    left 0
    top 0
    z-index 9998
    background-color rgba(0,0,0,.3)
    width 100%
    height 100%
    section
      position absolute
      left 35%
      top 40%
      width 30%
      img
        width 100%
  .Alert
    position fixed
    z-index 9999
    background-color rgba(0,0,0,.1)
    font-size 0
    width 100%
    height 100%
    .content
      position absolute
      left 14%
      top 35%
      border-radius .16rem
      background-color #FFF
      text-align center
      width 72%
      h3
        padding .4rem
        color #030303
        font-size .48rem
      section
        margin-bottom .4rem
        padding 0 .4rem
        color #030303
        font-size .427rem
      .btn
        display flex
        border-top 1px solid rgba(0,0,0,.1)
        p
          padding .25rem 0
          flex 1
          color #0076FF
          font-size .4rem
          cursor pointer
          &.cancel
            border-right 1px solid rgba(0,0,0,.1)